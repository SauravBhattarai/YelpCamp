<%- include("../partials/header") %>



<div class="container bg-light rounded">
    <h1 style="text-align: center;">Edit Campground "<%= campground.name %>"</h1>
    <div class="row"> 
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" autocomplete="off" style="width: 35%; margin: auto;">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="campground[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <label for="imageURL">Image</label>
                <input type="text" class="form-control" id="imageURL" name="campground[imageUrl]" value="<%= campground.imageUrl %>">
            </div>
            <div class="form-group">
                <label for="decription">Description</label>
                <input type="text" class="form-control" id="decription" name="campground[description]" value="<%= campground.description %>">
            </div>
            <button type="submit" class="btn bg-primary text-light btn-block mb-3">Submit</button>
            <a href="/campgrounds/<%= campground._id %>" class="btn bg-success text-light btn-block mb-3">Back</a>
        </form>
        
    </div>
</div>

<%- include ("../partials/footer") %> 
