<%- include("../partials/header") %>

<div class="container bg-light rounded">
    <h1 style="text-align: center;">Register</h1>
    <div class="row"> 
        <form action="/user/register" method="POST" autocomplete="off" style="width: 35%; margin: auto;">
            <div class="form-group">
                <label for="username">Name</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter Username">
            </div>
            <div class="form-group">
                <label for="password">Image</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password">
            </div>
            <button type="submit" class="btn bg-primary text-light btn-block mb-3">Submit</button>
            <a href="/" class="btn bg-success text-light btn-block mb-3">Back</a>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>

