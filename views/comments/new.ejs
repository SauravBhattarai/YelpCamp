<%- include("../partials/header") %>

<div class="container bg-light rounded">
    <h1 style="text-align: center;">Add comment on "<%= campground.name %>"</h1>
    <div class="row"> 
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST" autocomplete="off" style="width: 35%; margin: auto;">
            <div class="form-group">
                <label for="name">Comment</label>
                <input type="text" class="form-control" id="name" name="comment[text]" placeholder="Enter comment">
            </div>
            <!-- <div class="form-group">
                <label for="author">Author</label>
                <input type="text" class="form-control" id="author" name="comment[author]" placeholder="Author">
            </div> -->
            <button type="submit" class="btn bg-primary text-light btn-block mb-3">Submit</button>
            <a href="/campgrounds/<%= campground._id %>" class="btn bg-success text-light btn-block mb-3">Back</a>
        </form>
        
    </div>
</div>


