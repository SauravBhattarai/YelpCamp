<%- include ("partials/header") %>



<div class="container bg-light rounded">
    <h1 style="text-align: center;">Add New Campground</h1>
    <div class="row"> 
        <form action="/campgrounds" method="POST" autocomplete="off" style="width: 35%; margin: auto;">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Camp Name">
            </div>
            <div class="form-group">
                <label for="imageURL">Image</label>
                <input type="text" class="form-control" id="imageURL" name="imageUrl" placeholder="Enter Image URL">
            </div>
            <div class="form-group">
                <label for="decription">Description</label>
                <input type="text" class="form-control" id="decription" name="description" placeholder="Enter Camp Description">
            </div>
            <button type="submit" class="btn bg-primary text-light btn-block mb-3">Submit</button>
            <a href="/campgrounds" class="btn bg-success text-light btn-block mb-3">Back</a>
        </form>
        
    </div>
</div>

